{% extends 'base.html.twig' %}

{% block title %}Mon profil | TravelParadise{% endblock %}

{% block body %}
<div class="container py-4 mt-4">
    <h2 class="mb-4 mt-4 text-center" style="color: #2b6cb0;">Mon profil</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-4">
                <form method="post" enctype="multipart/form-data">
                    <div class="d-flex align-items-center mb-4">
                        <img src="{{ guide.photoUrl ? asset('uploads/guides/' ~ guide.photoUrl) : 'https://placehold.co/100x100?text=Photo' }}" alt="Photo de profil" class="rounded-circle shadow me-4" style="width:100px;height:100px;object-fit:cover;background:#fff;">
                        <div class="flex-grow-1">
                            <label for="photo" class="form-label">Changer la photo de profil</label>
                            <input type="file" class="form-control" id="photo" name="photo" accept="image/*">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="firstName" class="form-label">Pr√©nom</label>
                        <input type="text" class="form-control" id="firstName" name="firstName" value="{{ guide.firstName }}" required>
                    </div>
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Nom</label>
                        <input type="text" class="form-control" id="lastName" name="lastName" value="{{ guide.lastName }}" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{ guide.email }}" required>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Pays</label>
                        <select class="form-select" id="country" name="country">
                            <option value="">Choisir un pays</option>
                            {% for country in countries %}
                                <option value="{{ country.id }}" {% if guide.country and guide.country.id == country.id %}selected{% endif %}>{{ country.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-submit w-100">Enregistrer les modifications</button>
                </form>
            </div>
            <div class="card shadow p-4 mt-4">
                <h5 class="mb-3">Changer le mot de passe</h5>
                <form method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="newPassword" class="form-label">Nouveau mot de passe</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" minlength="6">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="confirmPassword" class="form-label">Confirmer le mot de passe</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" minlength="6">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-info w-100">Changer le mot de passe</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}